<?xml version="1.0" encoding="utf-8"?>
<com.ronen.sagy.firevest.custom_widgets.BounceScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6F7FB"
        tools:context=".fragments.AccountFragment"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_view_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/choose_inst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:text="Let's get to know each other better"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/RoundOfInv"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.ronen.sagy.firevest.custom_widgets.CircleImageView
                    android:id="@+id/choose_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="4dp"
                    android:src="@drawable/account_circle"
                    app:layout_anchorGravity="top|center_horizontal"
                    app:layout_scrollFlags="scroll" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/RoundOfInv_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="Round"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColorHint="@color/colorPrimary" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/field_of_work_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="Field Of Work"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColorHint="@color/colorPrimary" />
                <TextView
                    android:id="@+id/choose_inst3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    app:layout_constraintBottom_toTopOf="@+id/field_of_work"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:text="When ever you are ready, click here to continue "
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="30">


        </LinearLayout>



    </LinearLayout>

</com.ronen.sagy.firevest.custom_widgets.BounceScrollView>