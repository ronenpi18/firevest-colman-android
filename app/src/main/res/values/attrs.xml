<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
    <attr name="fontPath" format="string" />
    <item name="calligraphy_tag_id" type="id" />

    <declare-styleable name="BounceScrollView">
        <attr name="damping" format="float" />
        <attr name="scrollOrientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="incrementalDamping" format="boolean" />
        <attr name="bounceDelay" format="integer" />
        <attr name="triggerOverScrollThreshold" format="integer"/>
    </declare-styleable>
    <declare-styleable name="ExpandingItem">
        <attr name="item_layout" format="reference"/>
        <attr name="sub_item_layout" format="reference"/>
        <attr name="separator_layout" format="reference"/>
        <attr name="indicator_size" format="dimension"/>
        <attr name="indicator_margin_left" format="dimension"/>
        <attr name="indicator_margin_right" format="dimension"/>
        <attr name="show_indicator" format="boolean"/>
        <attr name="show_animation" format="boolean"/>
        <attr name="start_collapsed" format="boolean"/>
        <attr name="animation_duration" format="integer"/>
    </declare-styleable>

</resources>